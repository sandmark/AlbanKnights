name:                alban-knights
version:             0.1.0.1
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            http://github.com/githubuser/alban-knights#readme
license:             BSD3
license-file:        LICENSE
author:              sandmark
maintainer:          sandmark.m@gmail.com
copyright:           2010 sandmark
category:            Util
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     AlbanKnights
  build-depends:       base >= 4.7 && < 5
                     , containers
  default-language:    Haskell2010

executable AlbanKnights
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , alban-knights
                     , containers
  default-language:    Haskell2010

test-suite alban-knights-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , alban-knights
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/alban-knights
